{
  "name": "lambda-monorepo",
  "version": "1.0.0",
  "private": true,
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "main": "index.js",
  "license": "ISC",
  "workspaces": [
    "packages/@common-domain/*",
    "packages/@common-infra/*",
    "packages/@lambdas/*"
  ],
  "scripts": {
    "start:dev": "nodemon --watch 'packages/**' --ext 'ts,js' --exec 'ts-node app/server.ts --transpileOnly'",
    "cdk": "cdk",
    "bootstrap:dev": "lerna bootstrap",
    "bootstrap:prod": "lerna bootstrap -- --production --no-optional",
    "build": "lerna run build --stream --no-bail",
    "lint": "eslint '*/**/src/*.{js,ts}'",
    "lint:fix": "eslint '*/**/src/*.{js,ts}' --fix",
    "test": "lerna run test --stream --no-bail"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.114",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "aws-cdk": "2.63.2",
    "aws-sdk": "^2.1359.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.5.0",
    "lerna": "^6.6.1",
    "nodemon": "^2.0.22",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "aws-cdk-lib": "2.63.2",
    "constructs": "^10.0.0",
    "express": "^4.18.2",
    "source-map-support": "^0.5.21"
  }
}
